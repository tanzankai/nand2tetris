/**
 * 4-way demultiplexor:
 * {a, b, c, d} = {in, 0, 0, 0} if sel == 00
 *                {0, in, 0, 0} if sel == 01
 *                {0, 0, in, 0} if sel == 10
 *                {0, 0, 0, in} if sel == 11
 */

CHIP DMux4Way {
    IN in, sel[2];
    OUT a, b, c, d;

    PARTS:
    DMux(in=in, sel=sel[0], a=w1, b=w2);
    DMux(in=in, sel=sel[0], a=w3, b=w4);
    Not(in=sel[1], out=ns);
    And(a=w1, b=ns, out=a);
    And(a=w2, b=ns, out=b);
    And(a=w3, b=sel[1], out=c);
    And(a=w4, b=sel[1], out=d);
}